<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC_Webshop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/MVC_Webshop.styles.css" asp-append-version="true" />*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <header class="shop-main-nav">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Sweet ~ Nature</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                        </li>
                    </ul>
                </div>
                @* **** Cart button **** *@
                <div class="text-center ">
                    <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-dark" type="submit">
                        <i class="bi-cart-fill me-1"></i>
                        Cart
                        <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                    </a>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    @*HERO SECTION*@
@*    <section class="bg-dark py-5 container-fluid px-4 px-lg-5 my-0 mb-4 text-center text-white">
        <h1 class="display-4 fw-bolder">Sweets from the Nature</h1>
        <p class="lead fw-normal text-white-50 mb-0">Handplockad frukt & grönt av högsta kvalitet</p>
    </section>*@

    <section class="mb-4 text-center text-white" id="hero">
        <div class="hero-img-box container-fluid">
            <div class="row">
                <h1 class="display-4 fw-bolder text-dark text-uppercase">Sweets from the Nature</h1>
                @*<p class="lead fw-normal text-white-50 mb-0  text-dark">Handplockad frukt & grönt av högsta kvalitet</p>*@
                <img class="col-12" src="~/imagesDesign/hero-image-02.jpg" />
            </div>
        </div>
    </section>

@*    <div class="container">
        <main role="main" class="pb-3">*@
            @RenderBody()
@*        </main>
    </div>*@

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MVC_Webshop - <a asp-area="" asp-controller="Home" asp-action="Index">Till Startsidan</a>
        </div>
    </footer>
    
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
