@model Product

@{
    ViewData["Title"] = "Product Details";
}

<section class="container">
    <div>
        <h4>Detaljerad produktinformation</h4>

        <img src="@Model.ImageUrl" style="max-height: 200px;" />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Brand)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Brand)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price) kr/st
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShortDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShortDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>




            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.CategoryId)*@
                Categories
            </dt>
            <dd class="col-sm-10">
                <ul>
                    @*@Html.DisplayFor(model => model.CategoryId)*@
                    @foreach (var cat in Model.Categories)
                    {
                        <li>@cat.Name</li>
                    }
                </ul>
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Uppdatera</a> |
        <a asp-action="Index">Tillbaka till produktlistan</a>
    </div>

</section>

