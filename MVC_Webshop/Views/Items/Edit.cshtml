@model MVC_Webshop.Models.Item

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>@Model.Id</h4>
<h4>Item</h4>
<div class="container">


	<form asp-action="Edit">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="Id" />
		<div class="form-group">
			<label asp-for="ProductIdRef" class="control-label"></label>
			<input asp-for="ProductIdRef" class="form-control" />
			<span asp-validation-for="ProductIdRef" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Quantity" class="control-label"></label>
			<input asp-for="Quantity" class="form-control" />
			<span asp-validation-for="Quantity" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="CartId" class="control-label"></label>
			<select asp-for="CartId" class="form-control" asp-items="ViewBag.CartId"></select>
			<span asp-validation-for="CartId" class="text-danger"></span>
		</div>
		<div class="form-group mt-1">
			<input type="submit" value="Save" class="btn btn-primary" />
			<a asp-action="Index" class="btn btn-outline-info">Back to List</a>
		</div>
	</form>
</div>