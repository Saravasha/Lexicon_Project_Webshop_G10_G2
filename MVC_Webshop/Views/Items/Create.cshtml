@model MVC_Webshop.Models.Item

@{
	ViewData["Title"] = "Items";
}

<h1>@ViewBag.Title</h1>

<h4>Create</h4>
<hr />
<div class="row">
	<div class="col">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ProductIdRef" class="control-label"></label>
				<input asp-for="ProductIdRef" class="form-control" />
				<span asp-validation-for="ProductIdRef" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Quantity" class="control-label"></label>
				<input asp-for="Quantity" class="form-control" />
				<span asp-validation-for="Quantity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CartId" class="control-label"></label>
				<select asp-for="CartId" class="form-control" asp-items="ViewBag.CartId"></select>
			</div>
			<div class="form-group mt-1">
				<div class="col">
					<input type="submit" value="Create" class="btn btn-primary" />
				<a asp-action="Index" class="btn btn-outline-info">Back to List</a>
				</div>
			</div>
		</form>
	</div>
</div>
