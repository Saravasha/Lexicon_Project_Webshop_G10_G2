@model IEnumerable<Order>

@{
	ViewData["Title"] = "Orders";
}
<h1>@ViewBag.Title</h1>

<div class="container">
	<div class="row">

		<b class="col">
			@Html.DisplayNameFor(model => model.Id)
		</b>
		<b class="col">
			@Html.DisplayNameFor(model => model.ShippingDate)
		</b>
		<b class="col">
			@Html.DisplayNameFor(model => model.ExpectedDelivery)
		</b>
		<b class="col">
			@Html.DisplayNameFor(model => model.Shipped)
		</b>
		<b class="col">
			@Html.DisplayNameFor(model => model.OrderDate)
		</b>
		<b class="col">&nbsp;</b>
	</div>
	<hr />
	<div class="row">
		@foreach (var item in Model)
		{
			<div class="row mt-1">
				<div class="col">
					@Html.DisplayFor(modelItem => item.Id)
				</div>
				<div class="col">
					@Html.DisplayFor(modelItem => item.ShippingDate)
				</div>
				<div class="col">
					@Html.DisplayFor(modelItem => item.ExpectedDelivery)
				</div>
				<div class="col">
					@Html.DisplayFor(modelItem => item.Shipped)
				</div>
				<div class="col">
					@Html.DisplayFor(modelItem => item.OrderDate)
				</div>
				<div class="col">
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">Edit</a>
					<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning">Details</a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger ">Delete</a>
				</div>
			</div>
		}
	</div>
	<p>
		<a asp-action="Create" class="btn btn-primary">Create New</a>
	</p>
</div>
